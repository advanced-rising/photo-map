{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "outDir": "./dist/",
    "noImplicitAny": false,
    "lib": ["es2015", "DOM"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true, // resolve json module
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@services/*": ["services/*"],
      "@config/*": ["config/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@types/*": ["types/*"],
      "@api/*": ["api/*"],
      "@shared/*": ["shared/*"],
      "@interface/*": ["interface/*"]
    }
  },
  "include": ["./src/**/*", "./src/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
